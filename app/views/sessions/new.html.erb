<% if flash[:notice] %>
<%= content_tag :div, flash[:notice] %>
<% end %>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="welcome">
  Log in
</div>
<%= form_for @user, url: {action: 'create'} do |f| %>
<div class="field">
  Email: <%= f.text_field :email %>
</div>
<div class="field">
  Password: <%= f.password_field :password %> <%= f.submit "Sign In" %>
</div>
<% end %>
<div class="button">
  <%= link_to "Or Login With Facebook", '/auth/facebook', class: "btn btn-primary" %>
</div>
